@model IEnumerable<Rooftop.WebApp.ViewModel.FarmVm>
@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor accessor
@{
    ViewData["Title"] = "CreateOrEditRoofTop";
    if (accessor.HttpContext.Session.GetString("adminEmail") != null)
    {
        Layout = "~/Views/Shared/Backend/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/Fontend/_Layout.cshtml";
    }


}
@{
    var HO = accessor.HttpContext.Session.GetInt32("HouseOwnerId");
}

<div class="container py-5">
    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-md-6 col-lg-3 mb-3">
                <div class="card h-100 position-relative">
                    <img class="card-img-top" style="height:185px;object-fit:cover;" src="~/img/@item.Image1" alt="Card image cap" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <div class="row mb-2">
                            <div class="col-6 ">  <i class="bx bxs-user"></i><span> @item.HouseOwners.Name</span> </div>
                            <div class="col-6"><i class='bx bx-current-location'></i> @item.Location</div>
                        </div>
                        <div>
                        </div>
                        <p class="card-text">
                            @item.SomeDetail
                        </p>
                      
                        <a asp-action="Details" asp-controller="Farm" asp-route-id="@item.Id" class="btn btn-outline-primary mb-2">show Mero</a>
                        <a asp-action="BookNow" asp-controller="Payment" asp-route-id="@item.Id" class="btn btn-outline-primary mb-2">Book Now</a>
                        @{

                            if ((HO != null && HO != 0 && HO == item.HouseOwnersId) || accessor.HttpContext.Session.GetString("adminEmail") != null)
                            {
                               <a asp-action="Delete" asp-controller="Farm" asp-route-id="@item.Id" class=" text-danger position-absolute top-0 end-0 m-2 border-0"><i class="bx bxs-trash "></i></a>
                            }

                        }
                       

                    </div>
                </div>
            </div>
        }
    </div>
</div>
 

   
