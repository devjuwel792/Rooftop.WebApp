@model IEnumerable<Rooftop.WebApp.ViewModel.FarmVm>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Backend/_Layout.cshtml";
}

<h1>Available Rooftop</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

 <div class="row">
    @foreach (var item in Model)
    {

        <div class="col-md-6 col-lg-3 mb-3">
            <div class="card h-100">
                <img class="card-img-top" src="~/img/@item.Image1" alt="Card image cap" />
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <div class="row mb-2">
                        <div class="col-6 ">  <i class="bx bxs-user"></i><span> @item.HouseOwners.Name</span> </div>
                        <div class="col-6"><i class='bx bx-current-location'></i> @item.Location</div>
                    </div>
                    <div>
                    </div>
                    <p class="card-text">
                        @item.SomeDetail
                    </p>
                    <a asp-action="Details" asp-controller="Farm" asp-route-id="@item.Id" class="btn btn-outline-primary">show Mero</a>
                </div>
            </div>
        </div>
    }
 </div>

   
