@model IEnumerable<Rooftop.WebApp.ViewModel.HouseOwnerVm>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Backend/_Layout.cshtml";
}



<a asp-action="createoreditHouseOwner" class="btn btn-primary btn-sm text-white mb-4">Add New HouseOwner</a>

<!-- Basic Bootstrap Table -->
<div class="card">
    <h5 class="card-header">House Owner Table</h5>
    <div class="table-responsive text-nowrap">
        <table class="table text-center">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                   
                    <th>
                        Actions
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id"> @Html.DisplayFor(modelItem => item.Name)</a>
                           
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        

                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a asp-action="createoreditHouseOwner" asp-route-id="@item.Id" class="dropdown-item"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="dropdown-item"><i class="bx bx-trash me-1"></i> Delete</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="dropdown-item"><i class="bx bxs-user-detail me-1"></i> Details</a>
                                </div>
                            </div>
                        </td>

                    </tr>
                }

            </tbody>
        </table>


    </div>
</div>
<!--/ Basic Bootstrap Table -->



